{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "yarn workspace @gutengraph/frontend build",
    "watchPatterns": ["/frontend/**"]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "yarn workspace @gutengraph/frontend preview",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
